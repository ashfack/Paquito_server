<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Author" table="author">
    <id name="idAuthor" type="integer" column="id_author">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="mail" type="string" column="mail" length="128" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="passworda" type="string" column="passwordA" length="255" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="name" type="string" column="name" length="45" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="surname" type="string" column="surname" length="45" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="homepage" type="string" column="homepage" length="128" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
  </entity>
</doctrine-mapping>
